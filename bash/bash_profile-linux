[ -f ~/.bashrc ] && . ~/.bashrc

#ADD IN PATH TO MY LOCAL BIN
PATH=${PATH}:${HOME}/bin
export PATH

#DEFAULT EDITIOR
EDITOR=emacs
export EDITOR

#SET SWIFT_LIB
SWIFT_LIB=${HOME}/Library/Swift/apps/SwiftMontage/scripts
export SWIFT_LIB

[[ -s "$HOME/.rvm/scripts/rvm" ]] && source "$HOME/.rvm/scripts/rvm" # Load RVM into a shell session *as a function*
